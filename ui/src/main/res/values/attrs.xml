<resources>

    <declare-styleable name="FontFaceStyle">
        <attr name="font_path" format="string" />
        <attr name="font_use_cache" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AspectRatioImageView">
        <attr name="ari_stretch">
            <!-- 以高还是宽为基准. -->
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FixedRatioImageView">
        <attr name="fri_orientation">
            <!-- 以高还是宽为基准. -->
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <!--高宽比 ratio=height/width-->
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="ci_border" format="boolean" />
        <attr name="ci_border_width" format="integer" />
        <attr name="ci_border_color" format="color" />
        <attr name="ci_shadow" format="boolean" />
    </declare-styleable>
</resources>
